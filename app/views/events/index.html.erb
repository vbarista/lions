<style type="text/css">
  table th {
    white-space: nowrap;
    font-size: 24px;
  }
  table td a {
    white-space: nowrap;
    font-size: 32px;
  }
</style>


<div class="panel panel-default">
  <div class="panel-body">
    <%= link_to 'イベントを新規作成', new_event_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>


<div class="panel panel-default">
  <div class="panel-heading">
    <h2>イベント一覧</h2>
  </div>
  <div class="panel-body">
<% @events.each do |event| %>
<% if edit_user? %>
<%= link_to '編集', edit_event_path(event), class: "btn btn-success" %>&nbsp;
<%= link_to '削除', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
<% end %>
<table class="table table-bordered table-responsive">
  <tbody>
    <tr>
      <th>イベント&nbsp;</th>
      <td><%= link_to event.title, event %></td>
    </tr>
    <tr>
      <th>日時&nbsp;</th>
      <td><%= event.datetime.strftime('%Y年%m月%d日 %H:%M') %></td>
    </tr>
    <tr>
      <th>内容&nbsp;</th>
      <td><%= simple_format(event.contents) %></td>
    </tr>
  </tbody>
</table>
<% end %>
  </div>
</div>


<div class="list-group text-center">
  <a href="#" class="list-group-item toThePageTop">
    <span>▲</span>
  </a>
</div>
