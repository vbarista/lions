<style type="text/css">
  table th {
    white-space: nowrap;
    font-size: 24px;
  }
  table td a {
    white-space: nowrap;
    font-size: 32px;
  }
</style>

<h1>イベント一覧</h1>

<br />
<%= link_to 'イベントを新規作成', new_event_path %>

<% @events.each do |event| %>
<hr />
<table>
  <tbody>
    <tr>
      <th>イベント&nbsp;</th>
      <td><%= link_to event.title, event %></td>
    </tr>
    <tr>
      <th>日時&nbsp;</th>
      <td><%= event.datetime %></td>
    </tr>
    <tr>
      <th>内容&nbsp;</th>
      <td><%= event.contents %></td>
    </tr>
    <tr>
      <td colspan="2">&nbsp;</td>
    </tr>
    <% if edit_user? %>
    <tr>
      <td colspan="2">
        <%= link_to '編集', edit_event_path(event), class: "btn btn-success" %>&nbsp;
        <%= link_to '削除', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<hr />
<% end %>
<br />

<%= link_to 'イベントを新規作成', new_event_path %>
