<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>


  <div class="form-group">
    <label for="title">タイトル</label>
    <div class="form-group">
      <%= f.text_field :title, { required: false, autofocus: true, class: "form-control input-lg" } %>
    </div>
    <label for="datetime">日付</label>
    <div class="form-group form-inline">
      <%= f.datetime_select :datetime, {}, class: 'form-control input-lg' %>
    </div>
    <label for="contents">内容</label>
    <div class="form-group">
      <%= f.text_area :contents, { required: false, autofocus: true, class: "form-control input-lg", rows: 20 } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary btn-lg btn-block" %>
  </div>

<% end %>
