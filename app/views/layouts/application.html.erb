<!DOCTYPE html>
<html>
  <head>
    <title>Lions</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="navbar navbar-default navbar-static-top navbar-fixed-top">
      <div class="container">
        <button class="navbar-toggle" data-target=".navbar-responsive-collapse" data-toggle="collapse" type="button">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%=link_to image_tag("common/logo.jpg", height: '68', width: '68'), root_path, class: "navbar-brand" %>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav">
            <li>
              <%=link_to content_tag('span', 'イベント一覧', class: "btn btn-success"), events_path %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right root_links">
            <% if admin_user? %>
            <li>
              <%=link_to content_tag('span', '委員管理', class: "btn btn-success"), groups_path %>
            </li>
            <% end %>
            <% if user_signed_in? %>
            <li>
              <%=link_to content_tag('span', 'ログアウト', class: "btn btn-success"), destroy_user_session_path, method: :delete %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="main">
      <div class="container">
        <% if notice.present? %>
          <div class="panel panel-warning">
            <div class="panel-body">
              <%= notice %>
            </div>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <div class="list-group text-center">
      <a href="#" class="list-group-item toThePageTop">
        <span>▲</span>
      </a>
    </div>
  </body>
</html>
